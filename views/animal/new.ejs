<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/animal_head.ejs') %>
  </head>
  <body>
    <header>
      <%- include('../partials/animal_header.ejs') %>
    </header>

    <div class='animal-form-wrapper'>
      <h1>Create New Animal</h1>
      <form class="animal-form" action="/animal" method="POST">
        <div class="listen">
          <label for="animalName">Name: </label>
          <input type="text" name="animalName" required/>
        </div>
        <div class="listen">
          <label for="age">Age: </label>
          <input type="text" name="age" required/>
        </div>
        <div class="listen">
          <label for="species">Species: </label>
          <select name="species" required>
            <% for (let j = 0; j < species.length; j++ ) { %>
              <option value="<%=species[j].name%>"><%=species[j].name%></option>
            <% } %>
          </select></br>
        </div>
        <div class="listen">
          <label for="animalImg">Image: </label>
          <input type="url" name="animalImg"/>
        </div>

        <button id="animal-form-btn" type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </body>
</html>
